<!DOCTYPE html>
<%= render "/refinery/html_tag" %>
  <% site_bar = render('/refinery/site_bar', :head => true) -%>
  <head>
    <%= render "/refinery/head" %>
  </head>
  <body id="<%= canonical_id @page %>" class="row">
    <%= site_bar -%>
    <div id="page_container" class="small-12 medium-11 small-centered columns">
      <header id="header">
        <%= render "/refinery/header" -%>
      </header>
      <section id="page">
        <%= yield %>
      </section>
      <footer>
        <%= render "/refinery/footer" -%>
      </footer>
    </div>
    <%= javascript_include_tag "http://code.jquery.com/jquery-1.11.0.min.js" %>
    <%= javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/foundation/5.1.1/js/foundation.min.js" %>
    <%= render "/refinery/javascripts" %>
  </body>
</html>